<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAA6B8"
    android:padding="30dp"
    tools:context=".NgoRegister">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewNgoName"
            android:layout_width="350dp"
            android:layout_height="38dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-black"
            android:text="Name of Organization"
            android:textSize="30dp"
          />

        <EditText
            android:id="@+id/NgoName"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Enter Name of Organisation"
            android:inputType="text"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="Name of Concern Person"
            android:textSize="30dp"
            />

        <EditText
            android:id="@+id/NPersonName"
            android:layout_width="350dp"
            android:layout_height="46dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="Enter Full Name"
            android:inputType="text"
             />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="Email-Id."
            android:textSize="30dp"
            />

        <EditText
            android:id="@+id/NEmailAddress"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Enter E-mail Id"
            android:inputType="textEmailAddress"
             />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="Mobile No."
            android:textSize="30dp"
             />

        <EditText
            android:id="@+id/NPhone"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Enter Mobile No."
            android:inputType="phone"
            />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="Postal Address"
            android:textSize="30dp"
            />

        <EditText
            android:id="@+id/NPostalAddress"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Enter Postal Address"
            android:inputType="textPostalAddress"
            />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="GOV.Registration Number"
            android:textSize="30dp"
            />

        <EditText
            android:id="@+id/NRefNo"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="5dp"
            android:inputType="textPersonName"
            android:hint="Enter Ref Number"
            />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="20dp"
            android:text="UPI ID"
            android:textSize="30dp"
            />

        <EditText
            android:id="@+id/NupiId"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter UPI ID"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="20dp"
            android:text="Password"
            android:textSize="30dp"
           />
        <EditText
            android:id="@+id/NPassword"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="5dp"
            android:hint="Enter Password"
            android:inputType="textPassword"
            />
        <Button
            android:id="@+id/Nregister"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="center"
            app:layout_constraintVertical_bias="0.976" />

        <TextView
            android:id="@+id/NgoBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="Already Registered?Login"
            android:textSize="15dp"
            android:layout_gravity="center" />
    </LinearLayout>

</ScrollView>