<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Ntab3">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingLeft="5dp">


    <TextView
        android:id="@+id/NNameView"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="20dp"
        android:text="NGO Name" />

    <TextView
        android:id="@+id/NNamedis"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="0dp"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/NPersonNameView"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:text="Person Name" />

    <TextView
        android:id="@+id/NPersonNamedis"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="0dp"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/NEmailView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:text="Email Address"/>
    <TextView
        android:id="@+id/NEmaildis"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="0dp"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/NPhoneView"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:text="Mobile no." />

    <TextView
        android:id="@+id/NPhonedis"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="0dp"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/NAddressView"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:text="Postal Address" />

    <TextView
        android:id="@+id/NAddressdis"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="0dp"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/NRegView"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:text="Government Registration No." />

    <TextView
        android:id="@+id/NRefdis"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="0dp"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/NupiView"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:text="UPI Id" />

    <TextView
        android:id="@+id/Nupidis"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="0dp"
        android:textSize="20dp"
        />
    <Button
        android:id="@+id/NLogOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Logout" />

        <Button
            android:id="@+id/ngoAppoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Appointments" />



    </LinearLayout>
</ScrollView>